<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="120dp">

        <!--        <ImageView-->
        <!--            android:id="@+id/Arena"-->
        <!--            android:layout_width="179dp"-->
        <!--            android:layout_height="239dp"-->
        <!--            android:src="@drawable/arena_logo"/>-->
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BADMINTON"
            android:textColor="#00FF19"
            android:textSize="30dp"
            android:onClick="openBadminton"
            android:textStyle="bold">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="20dp">

            <ImageView
                android:id="@+id/roundedImageView"
                android:layout_width="match_parent"
                android:layout_height="179dp"
                android:src="@drawable/shuttlers_poster"
                android:background="#000000"
                android:scaleType="centerCrop"
                android:onClick="openBadminton"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TENNIS"
            android:textColor="#00FF19"
            android:textSize="30dp"
            android:onClick="openTennis"
            android:textStyle="bold">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="179dp"
            app:cardCornerRadius="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:strokeWidth="5dp"
            app:strokeColor="#000000"
            android:elevation="20dp">

            <ImageView
                android:id="@+id/roundedImageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tennis_stringing"
                android:onClick="openTennis"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SQUASH"
            android:textColor="#00FF19"
            android:textSize="30dp"
            android:onClick="openSquash"
            android:textStyle="bold">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="179dp"
            app:cardCornerRadius="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="20dp">

            <ImageView
                android:id="@+id/roundedImageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/squash_stringing"
                android:background="#000000"
                android:scaleType="centerCrop"
                android:onClick="openSquash"
                />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>

</ScrollView>
