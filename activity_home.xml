<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

<!--        <ImageView-->
<!--            android:id="@+id/Arena"-->
<!--            android:layout_width="179dp"-->
<!--            android:layout_height="239dp"-->
<!--            android:src="@drawable/arena_logo"/>-->
        <TextView
            android:textAlignment="center"
            android:layout_width="179dp"
            android:layout_height="239dp"
            android:background="@drawable/arena_logo"
            android:text="Arena Booking"
            android:textColor="#00FF19"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_width="179dp"
            android:layout_height="239dp"
            android:background="@drawable/shuttlers_poster"
            android:text="Stringing service"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:onClick="openStringing"
            >
        </TextView>
    </LinearLayout>

    </RelativeLayout>
</ScrollView>


