<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TableLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:padding="10dp">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_height="20dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:text="Racquet Brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_borders"
                        android:textColor="#000000"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/racquet_brand"
                        android:text=""

                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:background="@drawable/edit_text_borders"
                        android:textColor="#000000"
                        android:padding="4dp"
                        android:textSize="20dp"/>


                </TableRow>
                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_height="20dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:text="Racquet Model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_borders"
                        android:textColor="#000000"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/racquet_model"
                        android:text=""
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:background="@drawable/edit_text_borders"
                        android:textColor="#000000"
                        android:padding="4dp"
                        android:textSize="20dp"/>


                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_height="20dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:text="String Type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_borders"
                        android:textColor="#000000"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/string_type"
                        android:text=""
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:background="@drawable/edit_text_borders"
                        android:textColor="#000000"
                        android:padding="4dp"
                        android:textSize="20dp"/>


                </TableRow>
                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_height="20dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:text="String Tension"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_borders"
                        android:textColor="#000000"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/string_tension"
                        android:text=""
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:background="@drawable/edit_text_borders"
                        android:textColor="#000000"
                        android:padding="4dp"
                        android:textSize="20dp"/>


                </TableRow>
                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_height="20dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:text="String Colour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_borders"
                        android:textColor="#000000"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:text=""
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:background="@drawable/edit_text_borders"
                        android:textColor="#000000"
                        android:padding="4dp"
                        android:textSize="20dp"/>


                </TableRow>


            </TableLayout>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Add Racquet"
            android:background="@drawable/my_borders"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:onClick="openBadminton"/>
    </RelativeLayout>
</ScrollView>
